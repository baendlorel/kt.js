{
  "compilerOptions": {
    "target": "ESNext",
    "module": "preserve",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "composite": true,
    "strict": true,
    "typeRoots": ["./packages/types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@ktjs/babel-plugin-ktjsx": ["plugins/babel-plugin-ktjsx/src/index.ts"],
      "@ktjs/transformer": ["plugins/transformer/src/index.ts"],
      "@ktjs/router": ["packages/router/src/index.ts"],
      "@ktjs/shortcuts": ["packages/shortcuts/src/index.ts"],
      "@ktjs/mui": ["packages/mui/src/index.ts"],
      "@ktjs/shared": ["packages/shared/src/index.ts"],

      // & core
      "@ktjs/core": ["packages/core/src/index.ts"],
      "@ktjs/core/jsx": ["packages/core/src/index.ts"],
      "@ktjs/core/jsx-runtime": ["packages/core/src/jsx-runtime.ts"],

      "kt.js": ["packages/kt.js/src/index.ts"],
      "kt.js/jsx": ["packages/kt.js/src/jsx.ts"],
      "kt.js/jsx-runtime": ["packages/kt.js/src/jsx-runtime.ts"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "kt.js"
  },
  "include": [
    "./scripts/**/*.ts",
    "*.config.ts",
    "./packages/**/*.ts",
    "./packages/**/*.tsx",
    "./packages/**/*.js",
    "./configs/*.ts"
  ],
  "exclude": ["**/dist/**/*.js", "**/dist/**/*.d.ts"],
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/example" },
    { "path": "./packages/mui" },
    { "path": "./packages/router" },
    { "path": "./packages/shortcuts" },
    { "path": "./packages/shared" },
    { "path": "./packages/kt.js" }
  ]
}
