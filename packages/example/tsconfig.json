{
  "extends": "../../configs/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@ktjs/core": ["../core/src"],
      "@ktjs/jsx": ["../jsx/src/index.ts"],
      "@ktjs/jsx/jsx-runtime": ["../jsx/dist/jsx-runtime", "../jsx/src/jsx-runtime", "../jsx/dist/jsx-runtime.d.ts"]
    },
    "jsx": "react",
    "jsxFactory": "jsx"
  },
  "include": ["*.tsx", "*.ts", "../jsx/src/**.ts"]
}
