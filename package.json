{
  "name": "kt.js",
  "version": "0.26.3",
  "private": true,
  "author": {
    "name": "Kasukabe Tsumugi",
    "email": "futami16237@gmail.com"
  },
  "purpose": "npm",
  "description": "A simple and easy-to-use web framework, never re-render. Abbreviation of Kasukabe Tsumugi.",
  "description_zh": "KT.js，简单易用的web框架，重不重绘你说了算！给自己一个极致优化的机会！取自Kasukabe Tsumugi的首字母。",
  "type": "module",
  "homepage": "https://github.com/baendlorel/kt.js#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/baendlorel/kt.js"
  },
  "keywords": [
    "framework",
    "web",
    "typescript",
    "javascript",
    "monorepo"
  ],
  "scripts": {
    "exp": "pnpm --filter @ktjs/example exec vite --config ../../vite.config.ts --mode exp",
    "repolist": "tsx ./scripts/repo-list.ts",
    "lines": "tsx ./scripts/lines.ts",
    "build": "tsx ./scripts/index.ts --build",
    "pub": "tsx ./scripts/index.ts --publish",
    "test": "tsx ./scripts/index.ts --test",
    "cover": "pnpm -r --if-present run cover",
    "test:root": "vitest",
    "lint": "oxlint ."
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/preset-typescript": "^7.28.5",
    "@ktjs/babel-plugin-ktjsx": "^0.0.4",
    "@rollup/plugin-alias": "^6.0.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "jsdom": "^27.2.0",
    "oxlint": "^1.47.0",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "rollup": "^4.57.1",
    "rollup-plugin-conditional-compilation": "^1.0.6",
    "rollup-plugin-const-enum": "^1.1.4",
    "rollup-plugin-dts": "^6.3.0",
    "rollup-plugin-func-macro": "^1.1.1",
    "rollup-plugin-postcss": "^4.0.2",
    "tslib": "^2.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-babel": "^1.4.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@emotion/css": "^11.13.5",
    "shiki": "^3.22.0"
  }
}