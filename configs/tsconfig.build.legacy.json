{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "stripInternal": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true
  },
  "include": ["../packages/**/src/**/*.ts"],
  "exclude": ["../packages/**/tests/**/*"]
}
