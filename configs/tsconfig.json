{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "composite": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@ktjs/runtime": ["../packages/core/src/runtime.ts"],
      "@ktjs/router": ["../packages/router/src/main.ts"],
      "@ktjs/shortcuts": ["../packages/shortcuts/src/index.ts"],
      "@ktjs/mui": ["../packages/mui/src/index.ts"],
      "@ktjs/shared": ["../packages/shared/src/index.ts"],

      // & core
      "@ktjs/core": ["../packages/core/src/index.ts"],
      "@ktjs/core/jsx": ["../core/src/jsx/index.ts"],
      "@ktjs/core/jsx-runtime": ["../core/src/jsx/jsx-runtime.ts"],
      "kt.js": ["../packages/kt.js/src/index.ts"],
      "kt.js/jsx-runtime": ["../packages/kt.js/src/jsx/jsx-runtime.ts"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "../packages/kt.js"
  },
  "include": ["../packages/**/src/**/*.ts", "../packages/**/src/**/*.tsx", "../packages/**/tests/**/*.ts"],
  "references": [
    { "path": "../packages/core" },
    { "path": "../packages/example" },
    { "path": "../packages/mui" },
    { "path": "../packages/router" },
    { "path": "../packages/shortcuts" },
    { "path": "../packages/shared" },
    { "path": "../packages/kt.js" }
  ]
}
