{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "composite": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@ktjs/runtime": ["../packages/core/src/runtime.ts"],
      "@ktjs/core": ["../packages/core/src/index.ts"],
      "@ktjs/router": ["../packages/router/src/main.ts"],
      "@ktjs/shortcuts": ["../packages/shortcuts/src/index.ts"]
    }
  },
  "include": ["../packages/**/src/**/*.ts", "../packages/**/tests/**/*.ts"],
  "references": [
    { "path": "../packages/core" },
    { "path": "../packages/router" },
    { "path": "../packages/shortcuts" },
    { "path": "../packages/kt.js" }
  ]
}
