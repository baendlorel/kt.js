{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@ktjs/shared": ["../shared/index.ts"] // share common folder
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"], // include tests
  "references": [{ "path": "../shared" }] // share common folder
}
