{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsxImportSource": "@ktjs/core",
    "paths": {
      "@ktjs/core": ["./src/index.ts"],
      "@ktjs/core/jsx": ["./src/jsx/index.ts"],
      "@ktjs/core/jsx-runtime": ["./src/jsx/jsx-runtime.ts"],
      "@ktjs/shared": ["../shared/src/index.ts"]
    }
  },
  "include": ["src/**/*", "tests/**/*"],
  "references": [{ "path": "../shared" }]
}
