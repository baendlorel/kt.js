{
  "extends": "../../configs/tsconfig.build.json",
  "compilerOptions": {
    "module": "NodeNext", // Required for rollup plugin to work correctly with moduleResolution: NodeNext
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@ktjs/core": ["../core/src"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "@ktjs/jsx"
  },
  "include": ["src/**/*"]
}
