{
  "extends": "../../configs/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "composite": false,
    "paths": {
      "@/*": ["src/*"],
      "@ktjs/core": ["../core/src"],
      "@ktjs/core/jsx": ["../core/src/jsx/index.ts"],
      "@ktjs/core/jsx-runtime": ["../core/src/jsx/jsx-runtime.ts"]
    },
    "jsx": "react",
    "jsxFactory": "jsx"
  },
  "include": ["*.tsx", "*.ts"],
  "references": [{ "path": "../core" }]
}
