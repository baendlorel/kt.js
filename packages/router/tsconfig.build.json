{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@ktjs/runtime": ["../core/src/runtime.js"]
    }
  },
  // todo 这里能否在配置文件工厂里统一改成这样
  "include": ["src/**/*.ts"],
  "exclude": ["tests/**/*.ts"],
  "references": [{ "path": "../core" }]
}
