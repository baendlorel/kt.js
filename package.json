{
  "name": "kt.js",
  "version": "0.25.0",
  "private": true,
  "author": {
    "name": "Kasukabe Tsumugi",
    "email": "futami16237@gmail.com"
  },
  "purpose": "npm",
  "description": "A simple and easy-to-use web framework, never re-render. Abbreviation of Kasukabe Tsumugi.",
  "description_zh": "KT.js，简单易用的web框架，重不重绘你说了算！给自己一个极致优化的机会！取自Kasukabe Tsumugi的首字母。",
  "type": "module",
  "homepage": "https://github.com/baendlorel/kt.js#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/baendlorel/kt.js"
  },
  "keywords": [
    "framework",
    "web",
    "typescript",
    "javascript",
    "monorepo"
  ],
  "scripts": {
    "exp": "pnpm --filter @ktjs/example dev",
    "build": "pnpm --filter \"./packages/**\" run build",
    "build:core": "pnpm --filter @ktjs/core run build",
    "build:plugin": "pnpm --filter @ktjs/babel-plugin-ktjsx run build",
    "build:mui": "pnpm --filter @ktjs/core run build",
    "build:router": "pnpm --filter @ktjs/router run build",
    "build:shortcuts": "pnpm --filter @ktjs/shortcuts run build",
    "build:shared": "pnpm --filter @ktjs/shared run build",
    "build:example": "pnpm --filter @ktjs/example run build",
    "build:kt.js": "pnpm --filter kt.js run build",
    "check": "tsc --noEmit",
    "test": "vitest --config configs/vitest.config.ts",
    "lint": "oxlint .",
    "cover": "vitest --coverage",
    "lines": "clear && find ./packages -type f \\( -name \"*.ts\" -o -name \"*.tsx\" -o -name \"*.js\" -o -name \"*.mjs\" -o -name \"*.cjs\" \\) | xargs wc -l",
    "clean": "rimraf --glob \"packages/**/*.tsbuildinfo\" \"packages/**/.rollup.cache\" \"packages/**/dist\"",
    "pub": "pnpm -r publish --access public",
    "pubjsx": "pnpm --filter @ktjs/core run build && pnpm --filter kt.js run build && pnpm --filter @ktjs/core publish --access public && pnpm --filter kt.js publish --access public",
    "pub:router": "pnpm --filter @ktjs/router run build && pnpm --filter @ktjs/router publish --access public",
    "pub:shared": "pnpm --filter @ktjs/shared run build && pnpm --filter @ktjs/shared publish --access public",
    "pub:mui": "pnpm --filter @ktjs/mui run build && pnpm --filter @ktjs/mui publish --access public",
    "pub:plugin": "pnpm --filter @ktjs/babel-plugin-ktjsx run build && pnpm --filter @ktjs/babel-plugin-ktjsx publish --access public",
    "sync": "tsx .scripts/sync-version.ts"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/preset-typescript": "^7.28.5",
    "@ktjs/babel-plugin-ktjsx": "^0.0.4",
    "@rollup/plugin-alias": "^6.0.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.9",
    "jsdom": "^27.2.0",
    "oxlint": "^1.28.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "rollup": "^4.53.2",
    "rollup-plugin-conditional-compilation": "^1.0.6",
    "rollup-plugin-const-enum": "^1.1.4",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-func-macro": "^1.1.1",
    "rollup-plugin-postcss": "^4.0.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-babel": "^1.4.1",
    "vitest": "^4.0.9"
  },
  "dependencies": {
    "@emotion/css": "^11.13.5",
    "shiki": "^3.22.0"
  }
}
