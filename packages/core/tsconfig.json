{
  "extends": "../../configs/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@ktjs/core": ["src"],
      "@ktjs/core/jsx": ["src/jsx/index.ts"],
      "@ktjs/core/jsx-runtime": ["src/jsx/jsx-runtime.ts"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "@ktjs/core"
  },
  "include": ["src/**/*", "tests/**/*"]
}
