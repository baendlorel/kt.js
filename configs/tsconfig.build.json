{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // composite false
    "composite": false,
    "declaration": false,
    "emitDeclarationOnly": false,
    "declarationMap": false,

    "stripInternal": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@ktjs/core": ["../packages/core/src/index.ts"],
      "@ktjs/router": ["../packages/router/src/main.ts"],
      "@ktjs/shared": ["../packages/shared/src/index.ts"],
      "@ktjs/shortcuts": ["../packages/shortcuts/src/index.ts"]
    }
  },
  "include": ["../packages/**/src/**/*.ts", "../packages/**/src/**/*.tsx", "../packages/global.d.ts"],
  "exclude": ["../packages/**/tests/**/*"],
  "references": [
    { "path": "../packages/core" },
    { "path": "../packages/router" },
    { "path": "../packages/shortcuts" },
    { "path": "../packages/shared" },
    { "path": "../packages/kt.js" }
  ]
}
