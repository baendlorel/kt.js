{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "composite": false,
    "declaration": false,
    "emitDeclarationOnly": false,
    "declarationMap": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../core/src/*"],
      "@ktjs/core": ["../core/src/index.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "references": [{ "path": "../core" }]
}
